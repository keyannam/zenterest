<div class="row">
  <div class="col-md-6 col-md-offset-3">
<h1 div class="text-center">Sign In!</h1>
 <%= form_tag auth_path, method: :post, class: "form-signup" do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "form-control" %>
  </div>
<div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:password], class: "form-control" %>
</div>

<div>
 <%= submit_tag "Sign In", class: "btn btn-primary btn-block" %>
</div>
<br/>
<p>New here? <%= link_to "Sign Up", sign_up_path %></p>
  </div>
</div>

<% end %>
